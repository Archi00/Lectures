img {
  border-radius: 10%;
}

.flex-container {
  display: flex;
  gap: 10%;
  flex: 50%;
  margin: 0 20%;
  align-content: center;
  justify-content: center;
}

.width-text {
  display: flex;
  width: 50%;
  max-width: 50%;
  flex-direction: column;
  justify-content: flex-end;
}

.text-container {
  text-align: center;
  margin: auto;
}

.custom-button {
  display: block;
  padding: 1em 0.5em;
  width: 8em;
  border: none;
  text-align: center;
  cursor: pointer;
}

.button-on-text {
  margin: auto;
}
